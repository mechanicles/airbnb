<div class="row" style="padding-top: 10px;">
  <% if current_user.connected_to?('facebook') %>
    <b> Facebook connected! </b>
  <% else %>
    <%= link_to "Connect with Facebook", user_omniauth_authorize_path(:facebook) %>
  <% end %>

  <h2>User Profile</h2>
  <%= form_for @user, url: user_profile_update_path, method: :put, class: "bootstrap-center-form-medium" do |f| %>
    <%= render 'shared/form_errors', object: @user %>
    <div class="form-controls">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: "form-control" %>
      <%= f.label "Address *" %>
      <br/>
      <%= f.fields_for :address do |address_form| %>
        <%= address_form.label :street1 %>
        <%= address_form.text_field :street1, class: "form-control" %>
        <%= address_form.label :street2 %>
        <%= address_form.text_field :street2, class: "form-control" %>
        <%= address_form.label :city %>
        <%= address_form.text_field :city, class: "form-control" %>
        <%= address_form.label :state %>
        <%= address_form.text_field :state, class: "form-control" %>
        <%= address_form.label :country %>
        <%= address_form.text_field :country, class: "form-control" %>
      <% end %>
      <%= f.label :company_name %>
      <%= f.text_field :company_name, class: "form-control" %>
      <br />
      <%= f.submit f.object.new_record? ? "Create" : "Update" %>
    </div>
  <% end %>
</div>


