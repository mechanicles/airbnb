<div class="row" style="padding-top: 10px;">
  <h2>Create New Office Space</h2>
  <%= form_for @space, class: "bootstrap-center-form-medium"  do |f| %>
    <%= render 'shared/form_errors', object: @space %>

    <div class="form-controls">
      <%= f.label "Name *" %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label "Address *" %>
      <br/ >
      <%= f.fields_for :address do |address_form| %>
        <%= address_form.label :street1 %>
        <%= address_form.text_field :street1, class: "form-control" %>
        <%= address_form.label :street2 %>
        <%= address_form.text_field :street2, class: "form-control" %>
        <%= address_form.label :city %>
        <%= address_form.text_field :city, class: "form-control" %>
        <%= address_form.label :state %>
        <%= address_form.text_field :state, class: "form-control" %>
        <%= address_form.label :country %>
        <%= address_form.text_field :country, class: "form-control" %>
      <% end %>
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
      <%= f.label :total_seats %>
      <%= f.text_field :total_seats, class: "form-control" %>
      <%= f.label :start_time %>
      <%= f.select :start_time, timing_list, class: "form-control" %>
      <%= f.label :end_time %>
      <%= f.select :end_time, timing_list, class: "form-control" %>
      <br />
      <%= f.label :amenities %>
      <%= f.select :amenities, Space::AMENITIES.map { |a| [a, a] }, { include_hidden: false },
        { multiple: true, class: "form-control" } %>
      <br />
      <%= f.submit f.object.new_record? ? "Create" : "Update" %>
    </div>
  <% end %>
</div>

