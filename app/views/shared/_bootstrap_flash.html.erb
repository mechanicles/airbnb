<% flash.each do |name, message| %>
  <% if message.present? %>
    <div class="<%= "alert alert-#{name.to_s == 'alert' ? "danger" : "success"}" %>" >
      <a class="close" data-dismiss="alert"> Ã— </a>
      <%= content_tag :div, message, id: "flash_#{name}" if message.is_a?(String) %>
    </div>
  <% end %>
<% end %>
